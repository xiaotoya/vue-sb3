pipeline {
    agent any
    tools {
        nodejs "node18.15.0"
    }
    // parameters {
    //     string(name: 'TEST1', defaultValue: 'test', description: 'test')
    //     booleanParam(name: 'SKIP_E2E', defaultValue: false, description: 'skip e2e or not')
    // }
    // environment {
    //     HELLO_WORLD = "Hello World"
    // }
    stages {
        stage('Code Build') {
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build --prod
                    ls -la
                '''
            }
        }
        stage('Docker Build') {
            steps {
                sh '''
                    docker build -t vue-sb3:0.0.1 -f pipeline/Dockerfile ./
                    docker run -p 5000:80 vue-sb3:0.0.1
                '''
            }
        }
        stage('Docker Run') {
            steps {
                sh '''
                    docker run -p 5000:80 vue-sb3:0.0.1
                '''
            }
        }
    }
    // post {
    //     success {
    //         archiveArtifacts artifacts: 'a.txt'
    //     }
    // }
}
